{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"]
  },
  "ignore": [
    "node_modules/**/*"
  ],
  "include": [
    "app.ts",
    "framework/**/*",
    "routes/**/*",
    "services/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
